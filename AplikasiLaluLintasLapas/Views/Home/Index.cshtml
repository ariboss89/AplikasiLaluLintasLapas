@model BonKerja
@using AplikasiLaluLintasLapas.SD
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<body>
 
    <p id="tanggal" style="font-weight:bold"></p>

    <div class="text-center">
        <h1>Aplikasi Lalu Lintas WBP Rutan Kelas I Tanjungpinang</h1>
    </div>

    <div style="display:flex; height:100%; flex-direction:row; align-items:center">

        <div class="col-lg-4">
            <img height="100%" width="100%" src="~/images/icons/ham.png" />
        </div>
        <div class="col-lg-8 p-4" style="display:flex; flex-direction: column; justify-content: center; align-items: center">

            <div class="col-lg-12 mb-2" style="display:flex; flex-direction:row; justify-content:space-around;">

                <div style="border: solid; margin-right: 10px; display: flex; flex-direction: row; justify-content: space-around; align-items: center; background-color: aquamarine; height: 20vh; border-radius: 5px; box-shadow: inset" class="col-4 p-4">

                    <h5> Jumlah Keseluruhan</h5>

                    <div style="display:flex; flex-direction:column; align-items:center">
                        <img height="50%" ; width="50%" src="~/images/icons/handcuffs.png" />
                        <h1 id="txtWBP"> 0</h1>
                    </div>

                </div>

                <div style="border: solid; padding-left: 10px; padding-right: 10px; background-color: aquamarine; display: flex; flex-direction: row; justify-content: space-around; align-items: center; height: 20vh; border-radius: 5px; box-shadow: inset " class="col-4 p-4">
                    <h5> Total BonKerja Hari Ini</h5>

                    <div style="display:flex; flex-direction:column; align-items:center">
                        <img height="50%" ; width="50%" src="~/images/icons/report.png" />
                        <h1 id="txtBonKerja">0</h1>
                    </div>
                </div>

                <div style="border: solid; margin-left: 10px; display: flex; flex-direction: row; justify-content: space-around; align-items: center; height: 20vh; background-color: lightblue; border-radius: 5px; box-shadow: inset" class="col-4 p-4">
                    <h5> Sidang Tahanan</h5>

                    <div style="display:flex; flex-direction:column; align-items:center">
                        <img height="50%" ; width="50%" src="~/images/icons/gavel.png" />
                        <h1 id="txtSidangTahanan"> 0</h1>
                    </div>
                </div>

            </div>

            <div class="col-lg-12 mb-2" style="display:flex; flex-direction:row; justify-content:space-around;">

                <div style="border: solid; margin-right: 10px; display: flex; flex-direction: row; justify-content: space-around; align-items: center; background-color: lightgreen; height: 20vh; border-radius: 5px; box-shadow: inset" class="col-4 p-4">

                    <h5> Tahanan Pria</h5>

                    <div style="display:flex; flex-direction:column; align-items:center">
                        <img height="50%" ; width="50%" src="~/images/icons/jail.png" />
                        <h1 id="txtTahananPria"> 0</h1>
                    </div>

                </div>

                <div style="border: solid; padding-left: 10px; padding-right: 10px; background-color: lightgreen; display: flex; flex-direction: row; justify-content: space-around; align-items: center; height: 20vh; border-radius: 5px; box-shadow: inset " class="col-4 p-4">
                    <h5> Tahanan Wanita</h5>

                    <div style="display:flex; flex-direction:column; align-items:center">
                        <img height="50%" ; width="50%" src="~/images/icons/jail.png" />
                        <h1 id="txtTahananWanita"> 0</h1>
                    </div>
                </div>

                <div style="border: solid; margin-left: 10px; display: flex; flex-direction: row; justify-content: space-around; align-items: center; height: 20vh; background-color: lightblue; border-radius: 5px; box-shadow: inset" class="col-4 p-4">
                    <h5> Sidang Narapidana</h5>

                    <div style="display:flex; flex-direction:column; align-items:center">
                        <img height="50%" ; width="50%" src="~/images/icons/gavel.png" />
                        <h1 id="txtSidangNarapidana"> 0</h1>
                    </div>
                </div>

            </div>
            <div class="col-lg-12 mb-2" style="display:flex; flex-direction:row; justify-content:space-around;">

                <div style="border: solid; margin-right: 10px; display: flex; flex-direction: row; justify-content: space-around; align-items: center; background-color: ivory; height: 20vh; border-radius: 5px; box-shadow: inset" class="col-4 p-4">

                    <h5> Narapidana Pria</h5>

                    <div style="display:flex; flex-direction:column; align-items:center">
                        <img height="50%" ; width="50%" src="~/images/icons/jail.png" />
                        <h1 id="txtNarapidanaPria"> 0</h1>
                    </div>

                </div>

                <div style="border: solid; padding-left: 10px; padding-right: 10px; background-color: ivory; display: flex; flex-direction: row; justify-content: space-around; align-items: center; height: 20vh; border-radius: 5px; box-shadow: inset " class="col-4 p-4">
                    <h5> Narapidana Wanita</h5>

                    <div style="display:flex; flex-direction:column; align-items:center">
                        <img height="50%" ; width="50%" src="~/images/icons/jail.png" />
                        <h1 id="txtNarapidanaWanita"> 0</h1>
                    </div>
                </div>

                <div style="border:solid;margin-left: 10px; display: flex; flex-direction: column; justify-content: space-around; align-items: center; height: 20vh; background-color: lightskyblue; border-radius: 5px; box-shadow: inset" class="col-4 p-4">

                    <div style="display:flex; flex-direction:column; justify-content:center; align-items:center">
                        <img height="60%" ; width="40%" src="~/images/icons/user.png" />

                        <h5 class="col-12" style="text-align:center;" id="txtKeRupam"> Aplusan Belum Tersedia</h5>

                    </div>
                </div>

            </div>

        </div>
    </div>

    <br />

    <div style="background-color:whitesmoke; padding:10px; border-radius:10px">
        <p style="font-weight:bold">DATA APLUSAN</p>

        <div class="p-4 mt-3 border rounded" style="text-align:center;">
            <table id="tblData2" class="table table-striped table-bordered" style="width:100%; padding-top:10px;">
                <thead class="thead-dark">
                    <tr style="background-color:navy; color: white">
                        <th class="text-center">Jumlah WBP</th>
                        <th class="text-center">Tahanan</th>
                        <th class="text-center">Narapidana</th>
                        <th class="text-center">Personil</th>
                        <th class="text-center">Dari Rupam</th>
                        <th class="text-center">Ke Rupam</th>
                        <th class="text-center">Tanggal</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

</body>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    @if (User.IsInRole(StaticData.Role_Petugas))
    {
        <script src="~/js/Aplusan.js"></script>
    }
    else
    {
        <script src="~/js/Aplusan2.js"></script>
    }

}
