@using AplikasiLaluLintasLapas.SD;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "List Bon Kerja";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-success">Daftar Warga Binaan Pemasyarakatan </h2>
    </div>

    @if (User.IsInRole(StaticData.Role_Petugas))
    {
        <div class="col-6 text-end">
            <a class="btn btn-success" asp-action="Upsert"> <i class="fas fa-plus"></i> &nbsp; Tambah Warga WBP</a>
        </div>
    }
</div>

<br />
<div class="p-4 border rounded" style="text-align:center; background-color:white; color:black">
    <table id="tblData" class="table table-striped table-bordered" style=" width:100%; padding-top:10px; background-color:white">
        <thead class="thead-light">
            <tr style="background-color:navy; color: white">
                <th class="text-center">Nama</th>
                <th class="text-center">Nomor Registrasi</th>
                <th class="text-center">Perkara</th>
                <th class="text-center">Jenis Kelamin</th>
                <th class="text-center">Masa Pidana</th>
                <th class="text-center">Blok/ Kamar</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script src="~/js/Wbp.js"></script>

}