@using AplikasiLaluLintasLapas.SD;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "List Bon Kerja";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-success">Daftar Bon Kerja </h2>
    </div>

    @if (User.IsInRole(StaticData.Role_Petugas))
    {
        <div class="col-6 text-end">
            <a class="btn btn-success" asp-action="UpsertDetail"> <i class="fas fa-plus"></i> &nbsp; Tambah Bon Kerja</a>
        </div>
    }
</div>

<br />
<div class="p-4 border rounded" style="text-align:center; background-color:white; color:black">
    <table id="tblData" class="table table-striped table-bordered" style=" width:100%; padding-top:10px; background-color:white">
        <thead class="thead-light">
            <tr style="background-color:navy; color: white">
                <th class="text-center">Tanggal</th>
                <th class="text-center">Jumlah</th>
                <th class="text-center">KA Rutan</th>
                <th class="text-center">Kasi Yantah</th>
                <th class="text-center">KA KPR</th>
                <th class="text-center">KA RUPAM</th>
                <th class="text-center">Petugas</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    @if (User.IsInRole(StaticData.Role_Petugas))
    {
        <script src="~/js/BonKerja2.js"></script>

    }
    else
    {
        <script src="~/js/BonKerja.js"></script>

    }
}