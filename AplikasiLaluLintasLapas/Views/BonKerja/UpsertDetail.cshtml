@model AplikasiLaluLintasLapas.ViewModels.DtBonKerjaVM
@using AplikasiLaluLintasLapas.SD

@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var title = "Tambah Bon Kerja Warga Binaan";
}

@*<body style="overflow:hidden">*@
<body>
    <div style="justify-content:center" class="card shadow border-0 mt-4 p-4">

        <div class="row" style="display:flex; justify-content:center">
            <div class="col-sm-12; col-md-12; col-lg-12">

                <div class="card-body p-4">
                    <form method="post" class="row">

                        <div class="row p-3 border" style="border-radius: 20px; background-color: #000080">

                            @if (Model.DtBonKerja.IdDetail != 0)
                            {
                                title = "Edit Bon Kerja Warga Binaan";
                            }

                            <input type="hidden" asp-for="@Model.DtBonKerja.IdDetail" />

                            <div asp-validation-summary="ModelOnly"></div>

                            <div class="col-12 border-bottom">
                                <h2 style="text-align:center;color:white">@title</h2>
                            </div>

                            <div class="col-12 pt-4">
          
                                <div class="row" style=" padding-top:20px">
                                    <div class="col-lg-4 form-group row mb-2 mt-2">
                                        <label style="color:white; font-weight:bold;" asp-for="DtBonKerja.NamaWBP"> Nama WBP</label>
                                    </div>
                                    <div class="col-lg-8">

                                        <select id="cbWBP" style="text-align: center; background-color: white; color: black" asp-for="@Model.DtBonKerja.NamaWBP" asp-items="@Model.ListWBP" onchange="Search()" class="form-select border-0 shadow">
                                            <option disabled selected>PILIH WBP</option>
                                        </select>

                                        <span asp-validation-for="DtBonKerja.NamaWBP" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mt-2">
                                    <div class="col-lg-4 form-group row mb-2 mt-2">
                                        <label style="color:white; font-weight:bold;" asp-for="DtBonKerja.JenisKelamin"></label>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="form-group">
                                            <input id="txtJenisKelamin" readonly asp-for="DtBonKerja.JenisKelamin" class="form-control" style="text-align:center" />
                                            <span asp-validation-for="DtBonKerja.JenisKelamin" style="color:white"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mt-2">
                                    <div class="col-lg-4 form-group row mb-2 mt-2">
                                        <label style="color:white; font-weight:bold;" asp-for="DtBonKerja.Blok"></label>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="form-group">
                                            <input id="txtBlok" readonly asp-for="DtBonKerja.Blok" class="form-control" style="color:black; text-align:center" />
                                            <span asp-validation-for="DtBonKerja.Blok" style="color:white"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mt-2">
                                    <div class="col-lg-4 form-group row mb-2 mt-2">
                                        <label style="color:white; font-weight:bold;" asp-for="DtBonKerja.JenisBonKerja"> Jenis Bon Kerja</label>
                                    </div>
                                    <div class="col-lg-8 col-12">
                                        @Html.DropDownListFor(m => m.DtBonKerja.JenisBonKerja, new List<SelectListItem>
                                                                                                                    {
                                                new SelectListItem{Text="Asimilasi", Value = "Asimilasi"},
                                                new SelectListItem{Text="Bon Kejaksaan", Value = "Bon Kejaksaan"},
                                                new SelectListItem{Text="Bon Polisi", Value = "Bon Polisi"},
                                                new SelectListItem{Text="Bon Kerja", Value = "Bon Kerja"},
                                                new SelectListItem{Text="Bon Lain-Lain", Value = "Bon Lain-Lain"},
                                            }, "PILIH JENIS BONKERJA", new { id = "cbBonKerja", @class = "form-select", @style = "text-align:center" })
                                        <span asp-validation-for="@Model.DtBonKerja.JenisBonKerja" style="color:white"></span>
                                    </div>
                                </div>

                                <div class="row mt-2">
                                    <div class="col-lg-4 form-group row mb-2 mt-2">
                                        <label style="color:white; font-weight:bold;" asp-for="DtBonKerja.Keterangan"></label>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="form-group">
                                            <textarea asp-for="DtBonKerja.Keterangan" class="form-control" style="text-align:center">
                                        </textarea>
                                            <span asp-validation-for="DtBonKerja.Keterangan" style="color:white"></span>
                                        </div>
                                    </div>
                                </div>

                                @if (User.IsInRole(StaticData.Role_KARutan) & StaticData.TtdKaRutan == "Approve")
                                {
                                    <div class="row mt-2">
                                        <div class="col-lg-4 form-group row mb-2 mt-2">
                                            <label style="color:white; font-weight:bold;"> Gambar TTD </label>
                                        </div>

                                        <div class="col-8">
                                            <img style="border-radius:10px" ; height="100%" ; width="100%" ; src="~/images/signature/KARutan.png" />
                                        </div>
                                    </div>
                                }

                                @if (StaticData.TtdKaRutan == "Approve")
                                {
                                    <div class="row mt-2">
                                        <div class="col-lg-4 form-group row mb-2 mt-2">
                                            <label style="color:white; font-weight:bold;"> Gambar TTD KA Rutan </label>
                                        </div>

                                        <div class="col-8">
                                            <img style="border-radius:10px" ; height="100%" ; width="100%" ; src="~/images/signature/KARutan.png" />
                                        </div>
                                    </div>
                                }

                                @if (StaticData.TtdKaKpr == "Approve")
                                {
                                    <div class="row mt-2">
                                        <div class="col-lg-4 form-group row mb-2 mt-2">
                                            <label style="color:white; font-weight:bold;"> Gambar TTD KA KPR </label>
                                        </div>

                                        <div class="col-8">
                                            <img style="border-radius:10px" ; height="100%" ; width="100%" ; src="~/images/signature/KARutan.png" />
                                        </div>
                                    </div>
                                }

                                @if (StaticData.TtdKaRupam == "Approve")
                                {
                                    <div class="row mt-2">
                                        <div class="col-lg-4 form-group row mb-2 mt-2">
                                            <label style="color:white; font-weight:bold;"> Gambar TTD KA Rupam </label>
                                        </div>

                                        <div class="col-8">
                                            <img style="border-radius:10px" ; height="100%" ; width="100%" ; src="~/images/signature/KARutan.png" />
                                        </div>
                                    </div>
                                }

                                <div class="row mt-2">
                                    <div class="col-lg-4 form-group row mb-2">

                                    </div>
                                    <div class="col-lg-8">
                                        <div class="col-12">
                                            @if (Model.DtBonKerja.IdDetail != 0)
                                            {
                                                <partial name="_EditAndBackToListButton" model="@Model.DtBonKerja.IdDetail" />
                                            }
                                            else
                                            {
                                                <partial name="_CreateAndBackToListButton" />
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>

        <div class="p-4 border rounded" style="text-align:center; background-color:white; color:black">
            <table id="tblData2" class="table table-striped table-bordered" style=" width:100%; padding-top:10px; background-color:white">
                <thead class="thead-light">
                    <tr style="background-color:navy; color: white">
                        <th class="text-center">Nama WBP</th>
                        <th class="text-center">Jenis Kelamin</th>
                        <th class="text-center">Blok</th>
                        <th class="text-center">Keterangan</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
            </table>
        </div>

        <div>
            <button id="btnSelesai" onclick="DataPetugas()" style="display:flex; justify-content:center" class="btn btn-primary form-control mt-2"> Selesai </button>
        </div>

        <div id="divPetugas" class="row" style="display:none; justify-content:center">
            <div class="col-sm-12; col-md-12; col-lg-12">

                <div class="card-body p-4">

                    <div class="row p-3 border" style="border-radius: 20px; background-color: #000080">

                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="col-12 border-bottom">
                            <h2 style="text-align:center;color:white">Data Penanggung Jawab</h2>
                        </div>

                        <div class="col-12 pt-4">
                            <div class="row">
                                <div class="col-lg-4 form-group row mb-2 mt-2">
                                    <label style="color:white; font-weight:bold;"> NIP KA RUPAM</label>
                                </div>
                                <div class="col-lg-8">
                                    <div class="form-group">
                                        <input id="txtNipKaRupam" class="form-control" style="text-align:center" />
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-2">
                                <div class="col-lg-4 form-group row mb-2 mt-2">
                                    <label style="color:white; font-weight:bold;"> Nama KA RUPAM</label>
                                </div>
                                <div class="col-lg-8">
                                    <div class="form-group">
                                        <input id="txtNamaKaRupam" class="form-control" style="text-align:center" />
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-2">
                                <div class="col-lg-4 form-group row mb-2 mt-2">
                                    <label style="color:white; font-weight:bold;">List Petugas</label>
                                </div>
                                <div class="col-lg-8">
                                    <div class="form-group">
                                        <textarea rows="6" id="txtListPetugas" class="form-control" style="text-align:left">
                                        </textarea>
                                    </div>
                                </div>
                            </div>


                        </div>

                    </div>
                </div>
            </div>


            <div>
                <button onclick="SaveAll()" class="btn btn-primary form-control mt-2"> Simpan Data Keseluruhan </button>

                <button style="display:flex; justify-content:center" id="btnCancel" onclick="DataPetugas()" class="btn btn-danger form-control mt-2"> Cancel </button>

            </div>

        </div>

</body>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/DtBonKerja.js"></script>
}
